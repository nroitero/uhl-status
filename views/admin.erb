<h2 class="center">Urls list</h2>

<div class="container">
<table class="table table-stripped table-condensed table-responsive">
<tr>
<th>
URL
</th>
<th>
Last check 
</th>
<th>
Remove
</th>
</tr>
<%@urls.each{|url|%>

<tr>
<td>
<%=url.url%>
</td>
<td>
 <%=if url.status 
 "<span class='text-success'>SUCCESS</span>"
  elsif url.status==nil
   "<span class='text-info'>not checked</span>"
  
else
   "<span class='text-danger'>FAIL</span>"
end
   %>

</td>

<td class="center">
<a href='/admin/delete/<%=url.id%>'>  <span class="glyphicon glyphicon-remove text-danger" aria-hidden="true"></span> 
</a>

</td>
<%}%>

</table>

<form class="form-inline" method="post">

 <div class="form-group">
    <div class="input-group">
      <div class="input-group-addon"> <span class="glyphicon glyphicon-link text-primary" aria-hidden="true"></span> </div>
      <input type="text" class="form-control" name="url" placeholder="http://">
    </div>
  </div>
  <button type="submit" class="btn btn-default"> <span class="glyphicon glyphicon-plus text-primary" aria-hidden="true"></span> </button>
</form>

</div>